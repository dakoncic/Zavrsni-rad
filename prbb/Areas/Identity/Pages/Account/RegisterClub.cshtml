@page
@model RegisterClubModel


<div class="row">
    <div class="col-md-4">

    </div>
     
    <div class="col-md-4 registerdescription">
        <h2>Register</h2>
        <form asp-route-returnUrl="@Model.ReturnUrl" id="forma1" method="post">
            <h4>Create a new club account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
            </div>



            <div class="form-group" id="Club" name="randomName">
                <label asp-for="Input.ClubName">Club name</label>
                <input asp-for="Input.ClubName" class="form-control" />
            </div>
            <div class="form-group" id="Club1" name="randomName">
                <label asp-for="Input.Location"></label>
                <input asp-for="Input.Location" class="form-control" />
            </div>


            <button type="submit" class="btn btn-default">Register</button>
        </form>

    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />

}