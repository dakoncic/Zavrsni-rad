@model CreateEventModel
<div class="row">
    <div class="col-md-4"></div>

    <div class="col-md-4 description">
        <form asp-action="CreateEvent" enctype="multipart/form-data">
            <h4>New event</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventName">Event name</label>
                <input asp-for="EventName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="StartDate">Start date</label>
                <input asp-for="StartDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea rows="5" asp-for="Description" class="form-control"> </textarea>
            </div>
            <div class="form-group">
                <label asp-for="image">Image</label>
                <input type="file" asp-for="image" />
            </div>

            <input type="hidden" asp-for="UserId" />
            <input type="submit" value="Create" class="btn btn-default" />
        </form>

    </div>
</div>